<UserControl x:Class="NEGOSUDClient.MVVM.Templates.CreerCommande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NEGOSUDClient.MVVM.Templates"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1024">
    <Grid Background="White" Margin="20">
        <!-- Retour -->
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="40" Margin="20,10,0,0">
            <Image Source="../../assets/Logo/Navigation/FR.png" Stretch="Uniform" />
        </Button>
        <Line X1="0" Y1="50" X2="1024" Y2="50" Stroke="Gray" StrokeThickness="1" VerticalAlignment="Top" Margin="0,24,0,0" />
        <!-- Formulaire client et produit -->
        <Grid Margin="0,92,0,0" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Client -->
            <TextBlock Grid.Column="0" Text="Client" FontSize="14" FontWeight="Bold" Margin="56,7,98,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
            <TextBox Grid.Row="0" Grid.Column="0" Margin="55,31,50,0" Height="40" VerticalAlignment="Top" Background="#F4F4F4" BorderThickness="1" BorderBrush="#CCCCCC" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

            <!-- Produit -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Produit" FontSize="14" FontWeight="Bold" Margin="55,-30,0,50" VerticalAlignment="Bottom"/>
            <TextBox Grid.Row="1" Grid.Column="0" Margin="56,100,50,0" Height="40" VerticalAlignment="Top" Background="#F4F4F4" BorderThickness="1" BorderBrush="#CCCCCC" Grid.ColumnSpan="2"/>
            <TextBlock Grid.Row="1" Grid.Column="2" Text="Quantité" FontSize="14" FontWeight="Bold" Margin="0,-30,0,50" VerticalAlignment="Bottom"/>
            <TextBox Grid.Row="1" Grid.Column="2" Margin="0,102,4,0" Height="38" VerticalAlignment="Top" Background="#F4F4F4" BorderThickness="1" BorderBrush="#CCCCCC"/>
            <Button Grid.Row="1" Grid.Column="3" Margin="35,102,66,0" Content="Ajouter" Background="#FFCDD2" Height="40" Grid.ColumnSpan="2" />
        </Grid>

        <!-- Liste des produits ajoutés -->
        <ListView Margin="60,252,60,252" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Produit" Width="530" />
                    <GridViewColumn Header="Prix Unitaire" Width="150" />
                    <GridViewColumn Header="Quantité" Width="80" />
                    <GridViewColumn Header="Total" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Détails du panier -->
        <!-- Détails du panier -->
        <Grid Margin="60,541,60,0" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Prix :" FontSize="16" VerticalAlignment="Center" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="64€" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Livraison :" FontSize="16" VerticalAlignment="Center" />
            <TextBlock Grid.Row="1" Grid.Column="1" Text="12€" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" />

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Taxes :" FontSize="16" VerticalAlignment="Center" />
            <TextBlock Grid.Row="2" Grid.Column="1" Text="15,20€" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" />

            <Line Grid.Row="3" Grid.ColumnSpan="2" X1="0" Y1="0" X2="1024" Y2="0" Stroke="Gray" StrokeThickness="1" VerticalAlignment="Bottom" Margin="0,0,0,31" />

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Total :" FontSize="20" FontWeight="Bold" VerticalAlignment="Top" Margin="0,25,0,0" />
            <TextBlock Grid.Row="3" Grid.Column="1" Text="91,20€" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,26,0,-26" />
        </Grid>

        <!-- Bouton Commander -->
        <Button Content="Commander" Background="#C71585" Foreground="White" FontSize="18" Height="50" Width="150" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,774,24" />
    </Grid>
</UserControl>
